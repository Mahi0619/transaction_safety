<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <!-- Border -->
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#7F000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>